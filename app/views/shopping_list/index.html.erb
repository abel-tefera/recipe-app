<%= render "shared/navbar" %>

<div class="flex flex-col items-center">
  <h1 class="font-bold text-4xl my-4">ShoppingList</h1>
  <div class="flex flex-col items-start w-3/4">

    <div class="relative overflow-x-auto w-full my-6 mx-2">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead
          class="
            text-base
            text-gray-700
            uppercase
            bg-gray-50
            dark:bg-gray-700
            dark:text-gray-400
            bg-white
            border-b
          "
        >
          <tr>
            <th scope="col" class="px-6 py-3">
              Food
            </th>
            <th scope="col" class="px-6 py-3">
              Quantity
            </th>
            <th scope="col" class="px-6 py-3">
              Price
            </th>
          </tr>
        </thead>
        <tbody>
          <% @missing_foods.each_with_index do | food, index| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th
                scope="row"
                class="
                  px-6
                  py-4
                  font-medium
                  whitespace-nowrap
                  text-white
                  dark:text-gray-900
                "
              >
                <p><%= "#{food.name}" %></p>
              </th>
              <td class="px-6 py-4 text-black">
                <%= food.recipe_foods.select { |recipe| recipe.food_id == food.id }.first.quantity %>
                <%= food.measurement_unit %>
              </td>
              <td class="px-6 py-4 text-black">
                $<%= food.price * food.recipe_foods.select { |recipe| recipe.food_id == food.id }.first.quantity %>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
