<div class="new-food-container">
<div class="small-food-container">
<h1 class="food-heading">Create Food</h1>
<div class="text-fields-container">
<div>
<%= form_with model: @food do |f| %>
  <%= f.text_field :name, placeholder: "Enter Food Name" %>
</div>

<div>
  <%= f.text_field :measurement_unit, placeholder: "Enter Measurement Unit (e.g., kg)" %>
</div>

<div>
  <%= f.number_field :price, step: '0.01', placeholder: "Enter Food Price" %>
</div>

<div>
  <%= f.number_field :quantity, step: '1', placeholder: "Enter Food Quantity" %>
</div>

<div>
  <%= f.submit %>
</div>
</div>
<% end %>
</div>
</div>

