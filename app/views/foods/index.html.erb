<%= render "shared/navbar" %>

<div class="container">
  <%= link_to "Add Food", new_food_path, class: "add-food-btn" %>
</div>

<div class="table-container">
  <table>
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Price</th>
      <th>Delete</th>
    </tr>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td><%= button_to "Delete Food",
          food_path(food),
          method: :delete,
          data: {
            confirm: "Are you sure you want to delete this food?"
          },
          class: "delete-button" %></td>

      </tr>

    <% end %>
  </table>
</div>
