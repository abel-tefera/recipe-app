<%= render "shared/navbar" %>

<p style="color: green"><%= notice %></p>

<div class="flex flex-col items-center">
  <h1 class="text-6xl my-4">Recipes</h1>

  <div id="recipes">
    <% @recipes.each do |recipe| %>
      <div
        class="
          flex
          flex-col
          p-4
          border-solid
          border-2
          border-black
          items-center
          my-4
        "
      >
        <div class="flex flex-row">
          <p class="text-4xl me-2">
            <%= link_to recipe.name,
            recipe,
            class: "font-medium text-blue-600 dark:text-blue-500  hover:underline" %>
          </p>
          <p class="text-base ms-2 w-60"><%= recipe.description %></p>
        </div>
        <div class=" flex self-start ">
          <%= button_to "Remove",
          recipe_path(recipe),
          method: :delete,
          class: "font-medium text-blue-600 dark:text-blue-500  hover:underline" %>
        </div>
      </div>
      <p>
      </p>
    <% end %>
  </div>

  <%= link_to "New recipe", new_recipe_path %>
</div>
