<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %>
        prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field my-2">
    <%= form.label :name %><br>
    <%= form.text_field :name, autofocus: true, required: true, class: "w-full" %>
    <% recipe.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field my-2">
    <%= form.label :description %><br>
    <%= form.text_area :description, required: true, rows: 5, cols: 23, class: "w-full" %><br>
    <% recipe.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field my-2">
    <%= form.label :preparation_time %><br>
    <%= form.text_field :preparation_time,
                    required: true,
                    class: "w-full" %>
    <% recipe.errors.full_messages_for(:preparation_time).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field my-2">
    <%= form.label :cooking_time %><br>
    <%= form.text_field :cooking_time, required: true, class: "w-full" %>
    <% recipe.errors.full_messages_for(:cooking_time).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit class:
                  "bg-black text-white py-2 px-4 rounded-sm w-full my-2 cursor-pointer border-2 hover:bg-white hover:text-black hover:border-black transition" %>
  </div>
<% end %>
